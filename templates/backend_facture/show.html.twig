{% extends 'base.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <h1>Facture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facture.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ facture.reference }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ facture.montant }}</td>
            </tr>
            <tr>
                <th>Tva</th>
                <td>{{ facture.tva ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Ttc</th>
                <td>{{ facture.ttc }}</td>
            </tr>
            <tr>
                <th>Flag</th>
                <td>{{ facture.flag ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ facture.createdAt ? facture.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ facture.updatedAt ? facture.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backend_facture_index') }}">back to list</a>

    <a href="{{ path('backend_facture_edit', {'id': facture.id}) }}">edit</a>

    {{ include('backend_facture/_delete_form.html.twig') }}
{% endblock %}
