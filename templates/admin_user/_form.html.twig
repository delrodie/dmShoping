<div class="general-label">
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_widget(form.username) }}
        {{ form_errors(form.username)}}
    </div>
    <div class="form-group mb-2 mt-3">
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="form-group mb-2 mt-3">
        {{ form_widget(form.password) }}
        {{ form_errors(form.password) }}
    </div>
    <div class="checkbox mb-2">
        {{ form_widget(form.roles.0) }}
        {{ form_label(form.roles.0) }}
    </div>
    <div class="checkbox mb-1">
        {{ form_widget(form.roles.1) }}
        {{ form_label(form.roles.1) }}
    </div>
    <div class="checkbox mb-2">
        {{ form_widget(form.roles.2) }}
        {{ form_label(form.roles.2) }}
    </div>
    <div class="checkbox mb-2">
        {{ form_widget(form.roles.3) }}
        {{ form_label(form.roles.3) }}
    </div>
    <div class="checkbox mb-2">
        {{ form_widget(form.roles.4) }}
        {{ form_label(form.roles.4) }}
    </div>
    {{ form_widget(form) }}
    <div class="text-right mt-5">
        <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary btn-raised mb-0">Annuler</a>
        <button class="btn btn-primary btn-raised mb-0">{{ button_label|default('Enregistrer') }}</button>
    </div>

    {{ form_end(form) }}
</div>
