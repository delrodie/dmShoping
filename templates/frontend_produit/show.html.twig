<div class="product-single-container product-single-default product-quick-view">
    <div class="row row-sparse">
        <div class="col-lg-6 product-single-gallery">
            <div class="product-slider-container">
                <div class="product-single-carousel owl-carousel owl-theme">
                    <div class="product-item">
                        <img class="product-single-image" src="{{ absolute_url(asset('upload/albums/' ~ album.pochette)) }}" data-zoom-image="{{ absolute_url(asset('uploads/album/' ~ album.pochette)) }}"/>
                    </div>
                    <div class="product-item">
                        <img class="product-single-image" src="assets/images/pochette/rondelle2.jpg" data-zoom-image="assets/images/pochette/rondelle2.jpg"/>
                    </div>
                    <div class="product-item">
                        <img class="product-single-image" src="assets/images/pochette/rondelle3.jpg" data-zoom-image="assets/images/pochette/rondelle3.jpg"/>
                    </div>
                    <div class="product-item">
                        <img class="product-single-image" src="assets/images/pochette/rondelle4.jpg" data-zoom-image="hassets/images/pochette/rondelle4.jpg"/>
                    </div>
                </div>

            </div>
            <div class="prod-thumbnail owl-dots" id='carousel-custom-dots'>
                <div class="owl-dot">
                    <img src="{{ absolute_url(asset('upload/albums/' ~ album.pochette)) }}"/>
                </div>
                <div class="owl-dot">
                    <img src="assets/images/pochette/rondelle2.jpg"/>
                </div>
                <div class="owl-dot">
                    <img src="assets/images/pochette/rondelle3.jpg"/>
                </div>
                <div class="owl-dot">
                    <img src="assets/images/pochette/rondelle4.jpg"/>
                </div>
            </div>
        </div>

        <div class="col-lg-6 product-single-details">
            <h1 class="product-title">{{ album.titre }}</h1>

            <div class="price-box">
                <span class="product-price">{{ album.prixVente|number_format(0,'','.') }} FCFA</span>
            </div>

            <div class="product-desc">
                <p>{{ album.description|raw }}</p>
            </div>

            <hr class="divider">

            <div class="product-action">
                <form action="#">
                    <div class="product-single-qty">
                        <input class="horizontal-quantity form-control" type="text">
                    </div>

                    <button type="submit" class="btn btn-dark add-cart" title="Add to Cart">Commandez</button>
                </form>
            </div>

            <hr class="divider">
        </div>
    </div>
</div>