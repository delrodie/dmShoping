<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalform">{{ slide.titre }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-sm-12">
                    <img src="{{ asset('upload/slides/'~ slide.media) }}" alt="{{ slide.titre }}" class="img-fluid" >
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-raised btn-danger" data-dismiss="modal">Fermer</button>
            <a href="{{ path('backend_slide_edit', {'id': slide.id }) }}" class="btn btn-raised btn-primary ml-2">Modifier</a>
        </div>
    </div>
</div>